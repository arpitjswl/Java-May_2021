Graph QL

// Query : 
{
	bookById(id : "book-1"){
		id
		name
		pageCount
		author{
			firstName
			lastName
		}
	}
}


Schema : 

type Query{
	bookById(id : ID) : Book
}

type Book{
	id : ID
	name : String
	pageCount : Int
	author : Author
}

type Author{
	id : ID
	firstName : string
	lastName : string
}