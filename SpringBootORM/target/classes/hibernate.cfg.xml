<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        
        <property name="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</property>
        <property name="hibernate.connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
        <property name="hibernate.connection.password">Indrani9@</property>
        <property name="hibernate.connection.url">jdbc:oracle:thin:@localhost:1521:xe</property>
        <property name="hibernate.connection.username">Arpit</property>
        <property name="hbm2ddl.auto">update</property>
         <property name="show_sql">true</property>
        
        
        <mapping class="com.arpit.hibernate.SpringBootORM.model.UserData"/>
        <mapping class="com.arpit.hibernate.SpringBootORM.model.Employee"/>
        <mapping class="com.arpit.hibernate.SpringBootORM.model.Customer"/>
        <mapping class="com.arpit.hibernate.SpringBootORM.model.Vehicle"/>
        <mapping class="com.arpit.hibernate.SpringBootORM.model.Person"/>
        
         
    </session-factory>
</hibernate-configuration>
